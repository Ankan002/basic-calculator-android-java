<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fira_code"
        android:text="7 x 2.1"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/result"
        android:layout_marginEnd="22dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="14.7"
        android:fontFamily="@font/fira_code"
        android:textSize="52sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/operation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout"
        android:textAlignment="textEnd"
        android:layout_marginEnd="22dp"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/lower_background"
        android:paddingBottom="16dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/all_clear"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/all_clear"
                    android:textColor="@color/green_text"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/mod"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/mod"
                    android:textColor="@color/green_text"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/percent"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/percent"
                    android:textColor="@color/green_text"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/divide"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/divide"
                    android:textColor="@color/red_text"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/seven"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/seven"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/eight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/eight"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/nine"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/nine"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/multiply"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/multiply"
                    android:textColor="@color/red_text"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/four"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/four"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/five"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/five"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/six"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/six"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/minus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/minus"
                    android:textColor="@color/red_text"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/one"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/one"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/two"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/two"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/three"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/three"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/plus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:textColor="@color/red_text"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/backspace"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/backspace"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/zero"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/point"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/point"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/equal"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/button_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fira_code"
                    android:gravity="center"
                    android:text="@string/equal"
                    android:textColor="@color/red_text"
                    android:textSize="28sp" />

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

  </androidx.constraintlayout.widget.ConstraintLayout>